#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
int idade;
float peso;
float altura;
int main(){
setlocale(LC_ALL, "Portuguese");
printf ("Digite a sua idade: /n");
scanf ("%d", &ano);
